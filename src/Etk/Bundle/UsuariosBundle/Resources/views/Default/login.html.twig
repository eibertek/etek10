{% extends 'EtkNoticiasBundle::layout.html.twig' %}

{% block content %}
    <h1 class="title">Login</h1>
   {% for flashMessage in app.session.flashbag.get('notice') %}
       <span style="color:green; font-weight: 400"> {{ flashMessage }} </span><br/>
   {% endfor %}  
    <form action="{{ path("etk_usuarios_logincheck") }}" method="post" id="login">
        <div>
            <label for="username">Username</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />
        </div>

        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="_password" />
        </div>

        <button type="submit" class="sf-button">
            <span class="border-l">
                <span class="border-r">
                    <span class="btn-bg">Login</span>
                </span>
            </span>
        </button>
    </form>
    
    {% if error %}
        <div class="error">{{ error.message }}</div>
        <div><img src="{{ asset('bundles/etknoticias/images/magicword.gif') }}"></div>
    {% endif %}
    <a class="h3 center-block" href="{{ path("etk_usuarios_registerUser") }}"> >>> Crear Nuevo Usuario <<< </a>            
{% endblock %}


