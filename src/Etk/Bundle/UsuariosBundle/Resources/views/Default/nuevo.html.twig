{% extends 'EtkNoticiasBundle::layout.html.twig' %}

{% block navbar %}
    {{ parent() }}
    <br/>
{% endblock %}    
{% block content %}
    {{ parent() }}
   {% for flashMessage in app.session.flashbag.get('error') %}
       <span style="color:red; font-weight: 400"> {{ flashMessage }} </span><br/>
   {% endfor %} 
    <div class="etk_header_1 ">Nuevo Usuario:</div>
    <div class="container-fluid">
            {{ form_start(form) }}
            {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.nombre) }}
            {{ form_errors(form.nombre) }}
            {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.apellido) }}
            {{ form_errors(form.apellido) }}
            {{ form_widget(form.apellido, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.password) }}
            {{ form_errors(form.password) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div>
            {{ form_widget(form.Guardar, { 'attr': {'class': 'btn btn-default'} }) }}
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

