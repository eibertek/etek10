{% extends 'EtkNoticiasBundle::layout.parallax.html.twig' %}

{% block content %}
  <div class="etk_content">
    {{ parent() }}
   {% for flashMessage in app.session.flashbag.get('error') %}
       <span style="color:red; font-weight: 400"> {{ flashMessage }} </span><br/>
   {% endfor %} 
   {% for flashMessage in app.session.flashbag.get('notice') %}
       <span class="alert-success"> {{ flashMessage }} </span><br/>
   {% endfor %}    
    <div class="etk_header_1 ">Cambiar contrase√±a:</div>
    <div class="container-fluid row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
        <div class="form-group col-lg-6">
            {{ form_label(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}
        </div>
        <div class="form-group col-lg-6">
            {{ form_label(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
        </div>        
        <div class="col-lg-12 center-block ">
            {{ form_widget(form.Guardar, { 'attr': {'class': 'btn btn-default'} }) }}
        </div>
        {{ form_widget(form._token) }}
        {{ form_end(form, {'render_rest': false}) }}
    </div>
  </div>
{% endblock %}

